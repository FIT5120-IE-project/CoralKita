# 调试版Dockerfile - 用于诊断构建问题
FROM maven:3.9.6-eclipse-temurin-21 AS build
WORKDIR /build

# 复制整个项目结构
COPY . .

# 调试信息
RUN echo "=== 当前工作目录 ==="
RUN pwd
RUN echo "=== 列出所有文件 ==="
RUN ls -la
RUN echo "=== 检查pom.xml ==="
RUN ls -la pom.xml || echo "pom.xml not found"
RUN echo "=== 检查模块目录 ==="
RUN ls -la common/ || echo "common directory not found"
RUN ls -la pojo/ || echo "pojo directory not found"
RUN ls -la server/ || echo "server directory not found"

# 尝试构建
RUN mvn -B -q -DskipTests clean package

# 运行阶段
FROM eclipse-temurin:21-jre
WORKDIR /app

# 复制构建的jar文件
COPY --from=build /build/server/target/server-1.0-SNAPSHOT.jar /app/app.jar

# 设置JVM参数
ENV JAVA_OPTS="-XX:+UseContainerSupport -XX:MaxRAMPercentage=75.0"

# 暴露端口
EXPOSE 8080

# 运行应用
CMD ["sh", "-c", "java $JAVA_OPTS -jar /app/app.jar"]
